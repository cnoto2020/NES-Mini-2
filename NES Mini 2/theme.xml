

<theme>

	<formatVersion>4</formatVersion>

	<feature supported="carousel">	

	<view name="system">

	<image name="background" extra="true">
			<path>./_inc/images/background.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<zIndex>1</zIndex>
		</image>

	<carousel name="systemcarousel">
			<type>horizontal</type>
			<color>00000000</color>
			<logoScale>1</logoScale>
			<pos>-0.0 0.3</pos>
			<size>1.0 0.4</size>
			<logoSize>0.1916666666666667 0.3703703703703704</logoSize>
			<maxLogoCount>5</maxLogoCount>
			<zIndex>101</zIndex>
		</carousel>

		<text name="systemInfo">
			<backgroundColor>00000000</backgroundColor>
			<color>FFFFFF</color>
			<fontPath>./_inc/fonts/NESCyrillic_gamelist.ttf</fontPath>
			<fontSize>0.0592592592592593</fontSize>
			<pos>0.00 0.2222222222222222</pos>
			<size>1 0.050</size>
			<zIndex>102</zIndex>
		</text>

		<image name="carousel_bar" extra="true">
			<path>./_inc/images/carousel_bar.png</path>
			<size>0 0.4814814814814815</size>
			<pos>0.5 0.2185185185185185</pos>
			<origin>0.5 0</origin>
			<zIndex>100</zIndex>
		</image>
		
                 <image name="logo">
			<path>./logo.png</path>
		</image>

	</view>

	</feature>



	<view name="basic, detailed">
		
		<image name="background_system" extra="true">
  			<path>./background_system.png</path>
 			<origin>0 0</origin>
  			<pos>0 0</pos>
  			<size>1 1</size>
 			</image>

			<textlist name="gamelist">
				<selectedColor>FFFFFF</selectedColor>
				<primaryColor>757575</primaryColor>
				<secondaryColor>888888</secondaryColor>
				<fontPath>./_inc/fonts/NESCyrillic_gamelist.ttf</fontPath>
				<pos>0.2958333333333333 0.21</pos>		
				<size>0.4083333333333333 0.58</size>
				<lineSpacing>1.39</lineSpacing>
				<alignment>left</alignment>
				<horizontalMargin>0.0083333333333333</horizontalMargin>
				<fontSize>0.0592592592592593</fontSize>
				<selectorHeight>0.0</selectorHeight>
				<selectorOffsetY>0.0</selectorOffsetY>
				<selectorColor>000000</selectorColor>
			</textlist>
		

			<image name="md_image">
				<origin>0.5 0.5</origin>
				<pos>0.861 0.462</pos>
				<maxSize>0.22 0.43</maxSize>
				<zIndex>4</zIndex>
			</image>
		

			<image name="md_thumbnail">
				<origin>0.5 0.5</origin>
				<pos>0.138 0.5</pos>
				<maxSize>0.31 0.56</maxSize>
				<zIndex>4</zIndex>
			</image>

			<image name="logo">
				<pos>2 2</pos>
			</image>
		

			<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
				<color>ffffff</color>
				<forceUppercase>1</forceUppercase>
				<fontPath>./_inc/fonts/TinyUnicodeList.ttf</fontPath>
				<fontSize>0.05</fontSize>
				<size>0.24 0.01</size>
			</text>

			<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
				<color>ffffff</color>
				<forceUppercase>1</forceUppercase>
				<fontPath>./_inc/fonts/TinyUnicodeList.ttf</fontPath>
				<fontSize>0.05</fontSize>
				<size>0.23 0.02</size>
				<alignment>center</alignment>
			</text>
			<datetime name="md_releasedate">
				<color>ffffff</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./_inc/fonts/TinyUnicodeList.ttf</fontPath>
				<fontSize>0.05</fontSize>
				<size>0.23 0.02</size>
				<format>%Y</format>
			</datetime>

				<text name="md_lbl_rating">
					<pos>2 2</pos>
				</text>
				

				<text name="md_lbl_players">
					<pos>2 2</pos>
				</text>
				<text name="md_players">
					<pos>0.80 0.732</pos>
				</text>

				<text name="md_lbl_genre">
					<pos>2 2</pos>
				</text>
				<text name="md_genre">
					<pos>0.7455 0.657</pos>
				</text>

				<text name="md_lbl_developer">
					<pos>2 2</pos>
				</text>
				<text name="md_developer">
					<pos>0.7455 0.28</pos>
				</text>

				<text name="md_lbl_publisher">
					<pos>2 2</pos>
				</text>
				<text name="md_publisher">
					<pos>2 2</pos>
				</text>

				<text name="md_lbl_releasedate">
					<pos>2 2</pos>
				</text>
				<datetime name="md_releasedate">
					<pos>0.79 0.732</pos>
				</datetime>

				<text name="md_lbl_playcount">
					<pos>2 2</pos>
				</text>
				<text name="md_playcount">
					<pos>2 2</pos>
				</text>

				<text name="md_lbl_lastplayed">
					<pos>2 2</pos>
				</text>
				<datetime name="md_lastplayed">
					<pos>2 2</pos>
				</datetime>
		

			<text name="md_description">
				<pos>2 2</pos>
				<size>0.60 0.21</size>
				<color>ffffff</color>
				<fontPath>./_inc/fonts/TinyUnicodeList.ttf</fontPath>
				<fontSize>0.026</fontSize>
				<alignment>left</alignment>
				<forceUppercase>0</forceUppercase>
				<lineSpacing>1.6</lineSpacing>
			</text>

	</view>

</theme>
