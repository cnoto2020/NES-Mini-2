<theme>
	
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>
	
	<view name="system">

		<image name="logo">
			<path>./logo.png</path>
		</image>

	</view>

		<view name="basic, detailed">

		<image name="background_system" extra="true">
  		<path>./background_system.png</path>
 		<origin>0 0</origin>
  		<pos>0 0</pos>
  		<size>1 1</size>
 		</image>

		<text name="md_players">
		<pos>2 2</pos>
		</text>

		<text name="md_genre">
		<pos>2 2</pos>
		</text>

		<text name="md_developer">
		<pos>2 2</pos>
		</text>
		
		<datetime name="md_releasedate">
		<pos>2 2</pos>
		</datetime>

		<image name="md_image">
				<pos>0.861 0.37</pos>
				<maxSize>0.14 0.34</maxSize>
			</image>
		

			<image name="md_thumbnail">
				<pos>2 2</pos>
			</image>

		<text name="md_description">
				<pos>0.76 0.55</pos>
				<size>0.20 0.3</size>
				<fontSize>0.05</fontSize>
				<forceUppercase>1</forceUppercase>
				<lineSpacing>0.8</lineSpacing>
			</text>

		</view>
	
</theme>
